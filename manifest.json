{
  "manifest_version": 3,
  "name": "Chats Cleaner",
  "version": "1.5",
  "permissions": ["notifications", "webRequest", "tabs"],
  "host_permissions": ["https://claude.ai/*", "https://api.claude.ai/*"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}