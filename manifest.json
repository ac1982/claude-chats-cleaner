{
  "manifest_version": 3,
  "name": "Chats Cleaner",
  "version": "1.1",
  "permissions": ["https://claude.ai/*", "webRequest", "notifications", "tabs"],
  "host_permissions": ["https://claude.ai/*"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
